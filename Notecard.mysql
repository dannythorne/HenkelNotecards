use HenkelNotecards;

# Create the Note card table.
drop table if exists Notecard;
create table Notecard(
   id int auto_increment primary key,
   coords varchar(32),
   Passage varchar(4096),
   Comment varchar(4096),
   Position int,
   WorkId int);
     
